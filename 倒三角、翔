#include <stdio.h>

int main()
{
    int n;
    int i,j;
    while(scanf("%d",&n)!=EOF)
    {
        for(i=2*n-1;i>0;i=i-2)
        {
            for(j=(2*n-1-i)/2;j>0;j--)
            {
                printf(" ");
            }
            for(j=i;j>0;j--)
            {
                printf("*");
            }
            printf("\n");
        }
    }
    return 0;
}
